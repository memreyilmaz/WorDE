<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView

        android:id="@+id/word_detail_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        app:cardBackgroundColor="@color/cardBackgroundColor"
        card_view:cardCornerRadius="8dp"
        card_view:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/card_view_padding">

            <TextView
                android:id="@+id/word_detail_artikel_text_view"
                style="@style/ArtikelTextViewStyle"
                tools:text="@string/word_artikel" />

            <TextView
                android:id="@+id/word_detail_word_text_view"
                style="@style/WordTextViewStyle"
                tools:text="@string/word" />

            <TextView
                android:id="@+id/word_detail_example_text_view"
                style="@style/ExampleTextViewStyle"
                tools:text="@string/word_example" />

            <ImageView
                android:id="@+id/add_to_favourites_image_view_card_view"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="end"
                android:clickable="true"
                android:contentDescription="@string/favourite"
                android:focusable="true"
                android:title="@string/favourite" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</android.support.v4.widget.NestedScrollView>
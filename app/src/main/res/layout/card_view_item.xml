<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView
        android:id="@+id/word_detail_cardview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="100dp"
        android:layout_gravity="center"
        card_view:cardCornerRadius="8dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/word_detail_artikel_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="asdasd"/>
            <TextView
                android:id="@+id/word_detail_word_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="asdghfghfasd"/>
            <TextView
                android:id="@+id/word_detail_example_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="asdfghfghfghasd"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
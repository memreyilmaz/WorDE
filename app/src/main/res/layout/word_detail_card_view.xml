<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/word_detail_cardview"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="40dp"
    card_view:cardElevation="16dp"
    android:layout_gravity="center"
    card_view:cardCornerRadius="8dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/card_view_padding"
        android:orientation="vertical">
        <TextView
            android:id="@+id/word_detail_artikel_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/artikel_text_size"
            android:paddingBottom="@dimen/card_view_padding_bottom"
            android:textStyle="italic"
            tools:text="@string/word_artikel"/>
        <TextView
            android:id="@+id/word_detail_word_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/wordBlack"
            android:lineSpacingExtra="@dimen/word_text_line_spacing"
            android:paddingBottom="@dimen/card_view_padding_bottom"
            android:textStyle="bold"
            android:textSize="@dimen/word_text_size"
            tools:text="@string/word"/>
        <TextView
            android:id="@+id/word_detail_example_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="@dimen/example_text_line_spacing"
            android:textSize="@dimen/example_text_size"
            tools:text="@string/word_example"/>
    </LinearLayout>
</android.support.v7.widget.CardView>
